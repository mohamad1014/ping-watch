#!/usr/bin/env bash
set -euo pipefail

scripts_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
repo_root=$(cd "$scripts_dir/.." && pwd)

(
  cd "$repo_root/backend"
  .venv/bin/python -m pytest -q tests/test_live_server.py
)

(
  cd "$repo_root/e2e"
  npx playwright test --config playwright.integration.config.ts
)
